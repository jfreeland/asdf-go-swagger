#!/usr/bin/env bash
# shellcheck disable=SC2155

set -Eeuo pipefail

binary_name="swagger"
darwin_arm64_first_version="0.29.0"

install() {
  local version=$2
  local install_path=$3
  platform="$(uname -s | tr '[:upper:]' '[:lower:]')"
  readonly platform
  arch="$(uname -m)"
  if [ "$arch" == "x86_64" ]; then
    arch="amd64"
  fi
  if [[ $platform == "darwin" ]]; then
    local semver=$(echo "$version" | tr -d 'v')
    lowest=$(printf '%s\n' "$darwin_arm64_first_version" "$semver")
    if [[ "$lowest" != "$darwin_arm64_first_version" ]]; then
      arch="amd64"
    fi
  fi
  readonly arch
  local filename="${binary_name}_${platform}_${arch}"

  local bin_install_path="$install_path/bin"
  local binary_path="$bin_install_path/swagger"
  local download_url="https://github.com/go-swagger/go-swagger/releases/download/${version}/${filename}"

  echo "Creating bin directory"
  mkdir -p "${bin_install_path}"

  echo "Downloading go-swagger from ${download_url} to ${binary_path}"
  curl -L "${download_url}" -o "${binary_path}"
  chmod +x "${binary_path}"
}

install "$ASDF_INSTALL_TYPE" "$ASDF_INSTALL_VERSION" "$ASDF_INSTALL_PATH"
